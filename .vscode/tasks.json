{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "meson-build",
			"type": "meson",
			"mode": "build",
			"target": "necrowarp:executable",
			"problemMatcher": [
				"$meson-gcc"
			],
			"group": "build",
			"detail": "builds the project in the current configuration"
		},
		{
			"label": "meson-reconfigure-debug",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}\\build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}\\native\\windows.ini",
				"--cross-file",
				"${workspaceFolder}\\cross\\x86_64-windows.ini",
				"--buildtype",
				"debug",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building debug binaries"
		},
		{
			"label": "meson-reconfigure-release",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}\\build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}\\native\\windows.ini",
				"--cross-file",
				"${workspaceFolder}\\cross\\x86_64-windows.ini",
				"--buildtype",
				"release",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building windows binaries"
		},
		{
			"label": "meson-reconfigure-linux",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}\\build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}\\native\\windows.ini",
				"--cross-file",
				"${workspaceFolder}\\cross\\x86_64-linux.ini",
				"--buildtype",
				"release",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building linux binaries"
		},
	]
}